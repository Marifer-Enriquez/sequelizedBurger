<div class="container">
  
    <div class='row'>
        <div class='center col-md-12'>
            <img src="assets/images/burgerimg.jpg" id='image' alt="burger" class="img-thumbnail">
        </div>
    </div>
  

<h1>Yummi in my tummy</h1>

<h2>Burgers to be devoured:</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{id}}. {{burger_name}}
   <button class= 'devour btn btn-danger' data-id="{{id}}" data-newdevour={{true}}>Devour this!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
       <li>
        {{id}}. {{burger_name}}
       </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger to the list of favourites:</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>
  <button type="submit">Add Burger!</button>
</form>
